@using Project_PRN221_BookingFields.Utility
@model PagedResult<Project_PRN221_BookingFields.Models.FieldViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="FieldGrid">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                NUMBER
            </th>
            <th>
                TYPE
            </th>
            <th>
                PRICE
            </th>
            <th>
                STATUS
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FieldNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FieldType.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FieldPrice)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
</table>
<cs-pager cs-paging-pagesize=(int)Model.PageSize
          cs-paging-pagenumber=(int)Model.PageNumber
          cs-paging-totalitems=(int)Model.TotalItems
          cs-pagenumber-param="pageNumber"
          asp-controller="Fields"
          asp-controller="Index"
          cs-pager-li-current-class="page-item active"
          cs-pager-li-other-class="page-item"
          cs-pager-li-non-active-class="page-item disabled"
          cs-pager-link-current-class="page-link"
          cs-pager-link-other-class="page-link">
</cs-pager>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#FieldTypeGrid").DataTable({
                "paging": false,
                "filter": true
            });
        });
    </script>
}